doctype html
html
	head
		title #{title}: Primrose PV
		meta(charset='utf-8')
		meta(name="theme-color", content="#FBA11B")
		meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")
		link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.1/css/materialize.min.css")
		link(rel="stylesheet" href="/stylesheets/style.css")
		link(rel='shortcut icon' type='image/x-icon' href='./favicon.ico')
	body(ng-app="metro")
		nav(class="primroseYellow")
			ul(class="right hide-on-med-and-down")
				if !user	
					li(class=(title == 'Login' ? 'active' : ''))
						a(href='/users/login') Log In
				if user
					li
						a(href="#") Home
					// li
					// 	a(href="/#/incidentsAll") Incidents
					li
						a(href="/#/portfolio/monthReport") Portfolio report
					li
						a(href="/#/reportsAll") All site report
					li(class=(title == 'Register' ? 'active' : ''))
						a(href='/users/register') Register
					li 
						a Hello #{user.name}
					li
						a(href='/users/logout') Logout
			ul(class="right hide-on-large-only")
				a(class="dropdown-button btn indigo accent-3" data-activates="topNavDrop") Navigate
				ul(id="topNavDrop" class="dropdown-content")
					if !user	
						li(class=(title == 'Login' ? 'active' : ''))
							a(href='/users/login') Log In
					if user
						li
							a(href="#") Home
						// li
						// 	a(href="/#/incidentsAll") Incidents
						li
							a(href="/#/portfolio/monthReport") Portfolio report
						li
							a(href="/#/reportsAll") All site report
						li(class=(title == 'Register' ? 'active' : ''))
							a(href='/users/register') Register
						li 
							a Hello #{user.name}
						li
							a(href='/users/logout') Logout
			a(data-activates="slide-out", class="button-collapse")
				i(class="mdi-navigation-menu")
			ul(id="slide-out", class="side-nav fixed primroseYellow")
				div(ui-view="other")

		.container(class="container")
			!= messages()
			block content
		.container(class="footer")
		
		script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js")
		script(src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js")

		script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js")
		script(src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.15/angular-animate.js")
		script(src="//cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.14/angular-ui-router.min.js")
		
		script(src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.1/js/materialize.min.js")
		
		script(src="../javascripts/init.js")
		script(src="../app/main.js")
		script(src="../app/routes.js")
		script(src="../app/factory/apiFactory.js")
		script(src="../app/displayProject/reportsIncidents.js")
		
		script(src="../app/listSites/listSites.js")
		script(src="../app/displayProject/displaySite.js")
		script(src="../app/displayProject/displayProject.js")
		script(src="../app/displayProject/displayReport.js")
		script(src="../app/displayProject/displayExport.js")
		script(src="../app/displayProject/reportSingleIncident.js")
		script(src="../app/displayProject/monthReport.js")
		script(src="../app/displayProject/portfolioReport.js")

		script(src="//maps.googleapis.com/maps/api/js?sensor=false")
		script(src="../javascripts/angular-google-maps.js")
		script(src="../javascripts/lodash.min.js")
		script(src="../javascripts/moment.min.js")

		script(src="../javascripts/excellentexport.min.js")
		script(src="//code.highcharts.com/stock/highstock.src.js")
		script(src="//code.highcharts.com/adapters/standalone-framework.js")
		script(src="../javascripts/highcharts-ng.js")